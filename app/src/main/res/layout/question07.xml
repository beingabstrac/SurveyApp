<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16sp"
    android:layout_marginRight="16sp"
    android:layout_marginTop="16sp"
    android:background="@color/gray_BG"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_question7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="16sp"
        android:text="@string/question7"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/ll_et_answer7_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_answer7_child1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16sp"
            android:layout_marginEnd="8sp"
            android:layout_marginStart="16sp"
            android:layout_weight=".7"
            android:hint="@string/child_1"
            android:inputType="text"
            android:textColor="@android:color/black"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/et_answer7_age1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16sp"
            android:layout_marginEnd="16sp"
            android:layout_marginStart="8sp"
            android:layout_weight=".3"
            android:hint="@string/age"
            android:inputType="number"
            android:textColor="@android:color/black"
            tools:ignore="LabelFor" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_et_answer7_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_answer7_child2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16sp"
            android:layout_marginEnd="8sp"
            android:layout_marginStart="16sp"
            android:layout_weight=".7"
            android:hint="@string/child_2"
            android:inputType="text"
            android:textColor="@android:color/black"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/et_answer7_age2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16sp"
            android:layout_marginEnd="16sp"
            android:layout_marginStart="8sp"
            android:layout_weight=".3"
            android:hint="@string/age"
            android:inputType="number"
            android:textColor="@android:color/black"
            tools:ignore="LabelFor" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_et_answer7_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_answer7_child3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16sp"
            android:layout_marginEnd="8sp"
            android:layout_marginStart="16sp"
            android:layout_weight=".7"
            android:hint="@string/child_3"
            android:inputType="text"
            android:textColor="@android:color/black"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/et_answer7_age3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16sp"
            android:layout_marginEnd="16sp"
            android:layout_marginStart="8sp"
            android:layout_weight=".3"
            android:hint="@string/age"
            android:inputType="number"
            android:textColor="@android:color/black"
            tools:ignore="LabelFor" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_et_answer7_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_answer7_others"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16sp"
            android:layout_marginEnd="8sp"
            android:layout_marginStart="16sp"
            android:layout_weight=".7"
            android:hint="@string/others"
            android:inputType="text"
            android:textColor="@android:color/black"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/et_answer7_ageOthers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16sp"
            android:layout_marginEnd="16sp"
            android:layout_marginStart="8sp"
            android:layout_weight=".3"
            android:hint="@string/age"
            android:inputType="number"
            android:textColor="@android:color/black"
            tools:ignore="LabelFor" />

    </LinearLayout>

</LinearLayout>